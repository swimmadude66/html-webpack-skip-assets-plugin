{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "noImplicitAny": false,
      "outDir": "dist",
      "lib": [
        "es6"
      ]
    },
    "exclude": [
        "**/node_modules/",
        "spec/",
        "**/*.spec.js",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
  }
